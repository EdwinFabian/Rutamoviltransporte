<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ImageContact"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/perfil"
                android:layout_alignParentEnd="true" />
            <ImageView
                android:id="@+id/image_status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/circle_solidtwo"
                android:visibility="visible"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/ImageContact" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp">
            <TextView
                android:id="@+id/NameContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/EmailContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="end">

            <Button
                android:id="@+id/request_button_accept"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_circleseven"
                android:text="Aceptado"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>