<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/gradient_animation"
    android:paddingTop="16dp"
    android:id="@+id/LinerLayout"
    tools:context=".Perfil">

    <LinearLayout
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/custom_circletree"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="12dp">
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ImageViewPhoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/perfil"
                    app:civ_border_width="5dp"
                    app:civ_border_color="@color/colorStartBlue"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ImageViewPhotoEdit"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/perfil"
                    app:civ_border_color="@color/colorStartBlue"
                    app:civ_border_width="5dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignBottom="@id/ImageViewPhotoEdit"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/circlebackgroundtree"
                    android:padding="7dp"
                    android:src="@drawable/icono_editar" />
            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/idTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="12sp"/>
        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <Button
                android:id="@+id/button"
                android:clickable="true"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/effect_button"
                android:onClick="logOut"
                android:text="@string/salir"
                android:textColor="#fff" />

            <Button
                android:id="@+id/Information"
                android:clickable="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/custom_circleone"
                android:text="Información"
                android:textColor="#fff" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_circletree"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialogvaloration"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="20dp"
                android:background="@drawable/circlebackgroundfive"
                android:gravity="center"
                android:padding="10dp"
                android:src="@drawable/icono_start"
                android:textColor="@color/mapboxWhite"
                android:textSize="20dp" />

            <RelativeLayout
                android:layout_width="109dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/circlebackgroundfour"
                    android:padding="10dp"
                    android:src="@drawable/icono_notifications" />

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignBottom="@id/notification"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="67dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginRight="73dp"
                    android:layout_marginBottom="43dp"
                    android:background="@drawable/circlebackgroundtwo"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="2"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/PhotoGallery"
                android:clickable="true"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_margin="20dp"
                android:background="@drawable/circlebackgroundone"
                android:padding="10dp"
                android:src="@drawable/icono_image" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/HOLA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="142dp"
                android:text="Notificación"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/HOLAs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="64dp"
                android:text="Fotos"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/HOLAss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="255dp"
                android:text="Valoracion"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>