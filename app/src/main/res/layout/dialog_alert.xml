<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient"
    android:layout_gravity="center">
    <ImageView
        android:id="@+id/cerrardialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/custom_circleone"
        android:padding="10dp"
        android:src="@drawable/icono_cerrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/detect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/icono_ra"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.skyfishjy.library.RippleBackground
        android:id="@+id/findCoins"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:rb_color="#b71c1c"
        app:rb_duration="3000"
        app:rb_radius="32dp"
        app:rb_rippleAmount="5"
        app:rb_scale="6">

        <ImageView
            android:id="@+id/centerImageBut"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circlebackgroundsix"
            android:padding="10dp"
            android:src="@drawable/icono_information" />
    </com.skyfishjy.library.RippleBackground>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="Alerta"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/findCoins">
        <ImageView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorYellowOrange"
            android:src="@drawable/icono_ra"
            android:textColor="#fff"
            android:padding="30dp"
            android:textSize="20sp" />

        <TextView
            android:background="@color/colorVioletDark"
            android:id="@+id/result1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:padding="20dp"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>